---
interface Props {
  src: ImageMetadata;
  alt: string;
  name?: string;
  socials?: {
    linkedin?: string;
    instagram?: string;
  };
}
import "@fontsource-variable/overpass-mono";
import { Image } from "astro:assets";
const { src, alt, name, socials } = Astro.props;
---

<div id="card">
  <Image src={src} alt={`${alt}`} />
  <div class="p-4">
    <div class="text-xl font-bold">{name}</div>
    <div class="socials-icons">
      {
        socials?.linkedin && (
          <a href={socials?.linkedin} target="_blank">
            <img src="/socials/linkedin.svg" alt="linkedin" />
          </a>
        )
      }
      {
        socials?.instagram && (
          <a href={socials?.instagram} target="_blank">
            <img src="/socials/instagram.svg" alt="instagram" />
          </a>
        )
      }
    </div>
  </div>
</div>

<style>
  #card {
    width: 80%;
    padding: 1rem 2rem;
    border: 1px solid white;
    height: 40dvh;
    background-size: cover;
    background-position: center;
    border-radius: 10px;
    transition: all 0.3s ease;
    font-family: "Overpass Mono Variable", monospace;
  }
  #card:hover {
    transform: scale(1.05);
  }
  #card > img {
    width: 100%;
    height: 80%;
    object-fit: cover;
    object-position: top;
    border-radius: 10px;
  }
  .socials-icons {
    display: flex;
    align-items: center;
    padding: 0 3rem;
  }
  #card .p-4 {
    height: 20%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    align-items: center;
  }
  #card .p-4 div {
    margin: 0;
    padding: 0;
    color: var(--text-primary);
  }
  #card .p-4 p {
    margin: 0;
    padding: 0;
    color: var(--text-secondary);
  }
  .socials-icons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .socials-icons > img {
    width: 1rem;
    height: 1rem;
  }
  @media (max-width: 768px) {
    #card {
      height: 50dvh;
    }
  }
</style>
