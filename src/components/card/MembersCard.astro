---
interface Props {
  src: string;
  alt: string;
  name?: string;
  socials?: {
    linkedin?: string;
    instagram?: string;
  };
}
import "@fontsource-variable/overpass-mono";

const { src, alt, name, socials } = Astro.props;
---

<div id="card">
  <img src=`${src}` alt=`${alt}` />
  <div class="p-4">
    <div class="text-xl font-bold">{name}</div>
    <div class="socials-icons">
      <img src="/socials/linkedin.svg" alt="instagram" />
      <img src="/socials/instagram.svg" alt="instagram" />
    </div>
  </div>
</div>

<style>
  #card {
    width: 100%;
    height: 40vh;
    background-size: cover;
    background-position: center;
    border-radius: 10px;
    transition: all 0.3s ease;
    font-family: "Overpass Mono Variable", monospace;
  }
  #card:hover {
    transform: scale(1.05);
  }
  #card > img {
    width: 100%;
    height: 80%;
    object-fit: cover;
    border-radius: 10px;
  }
  .socials-icons {
    display: flex;
    align-items: center;
    padding: 0 3rem;
  }
  #card .p-4 {
    height: 20%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    align-items: center;
  }
  #card .p-4 div {
    margin: 0;
    padding: 0;
    color: var(--text-primary);
  }
  #card .p-4 p {
    margin: 0;
    padding: 0;
    color: var(--text-secondary);
  }
  .socials-icons {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .socials-icons > img {
    width: 1rem;
    height: 1rem;
  }
</style>
