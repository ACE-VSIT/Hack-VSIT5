<style>
  #sponsors {
    position: relative;
    margin-top: 3rem;
    min-height: 60vh;
    height: auto;
    padding: 5vh 10vw;
    font-family: "Overpass Mono Variable", sans-serif;
  }
  #sponsors h1 {
    font-size: 10em;
    height: 0.8em;
    font-weight: bold;
    padding: 0;
    margin: 0;
    color: var(--text-background);
  }
  #sponsors h1::selection {
    background: transparent;
  }
  #sponsors p {
    color: var(--text-primary);
    font-size: 1.5em;
    margin-left: 1rem;
  }
  #sponsors p::selection {
    background: transparent;
  }
  #sponsors .companies {
    display: flex;
    margin: 5vh 0;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }
  #sponsors .company {
    width: 10%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #sponsors .company img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  /* mobile view */
  @media (max-width: 768px) {
    #sponsors {
      padding: 5vh 5vw;
    }
    #sponsors h1 {
      font-size: 5em;
    }
    #sponsors p {
      font-size: 1em;
    }
    #sponsors .companies {
      margin: 2vh 0;
      gap: 2rem;
    }
    #sponsors .company {
      width: 20%;
    }
  }
</style>
