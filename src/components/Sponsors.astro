---
import "@fontsource-variable/overpass-mono";
import Graphics from "./graphics/Graphics.astro";
import Line from "./graphics/Line.astro";
type Company = {
  level: "Event-Partner" | "Premium-Sponsor" | "Partner-Sponsor";
  data: {
    logo: string;
    name: string;
    link: string;
  }[];
};
const companies: Company[] = [
  {
    level: "Event-Partner",
    data: [
      {
        name: "MLH",
        logo: "/sponsors/mlh.png",
        link: "https://mlh.io/",
      },
    ],
  },
  {
    level: "Premium-Sponsor",
    data: [
      {
        name: "Devfolio",
        logo: "/sponsors/devfolio.png",
        link: "https://devfolio.co/",
      },
      {
        name: "Digital Ocean",
        logo: "/sponsors/digitalOcean.png",
        link: "https://www.digitalocean.com/",
      },
      {
        name: "Polygon",
        logo: "/sponsors/Polygon.png",
        link: "https://polygon.technology/",
      },
    ],
  },
  {
    level: "Partner-Sponsor",
    data: [
      {
        name: "Bobble AI",
        logo: "/sponsors/bobble.png",
        link: "https://bobble.ai/",
      },
      {
        name: "echo3d",
        logo: "/sponsors/echo3d.png",
        link: "https://echo3d.co/",
      },
      {
        name: "Bobble AI",
        logo: "/sponsors/bobble.png",
        link: "https://bobble.ai/",
      },
      {
        name: "echo3d",
        logo: "/sponsors/echo3d.png",
        link: "https://echo3d.co/",
      },
    ],
  },
];
---

<section id="sponsors">
  <h1>16.</h1>
  <div class="header">
    <p>Previous Sponsors</p>
    <Line top={1.5} left={17} height={20} rotation={-90} design="primary" />
  </div>
  <div class="companies">
    {
      companies.map((company) => {
        return (
          <div class="company">
            <p class="tier">{company.level}</p>
            <div class="company-logo">
              {company.data.map((item) => {
                return (
                  <img
                    class={`${company.level.toLowerCase()}
                  `}
                    src={item.logo}
                    alt={item.name}
                  />
                );
              })}
            </div>
          </div>
        );
      })
    }
    <Graphics src="cubes" top={25} left={-10} alt="cubes" />
    <Graphics src="cubes" top={30} right={-5} alt="cube" />
  </div>

  <style>
    #sponsors {
      position: relative;
      margin-top: 3rem;
      min-height: 60dvh;
      height: auto;
      padding: 5dvh 10dvw;
      font-family: "Overpass Mono Variable", sans-serif;
    }
    .header {
      position: relative;
    }
    .event-partner {
      height: 25vh;
      width: 25vw;
    }
    .premium-sponsor {
      height: 15vh;
      width: 25vw;
    }
    .partner-sponsor {
      height: 10vh;
      width: 10vw;
    }
    #sponsors h1 {
      font-size: 10em;
      height: 0.8em;
      font-weight: bold;
      padding: 0;
      margin: 0;
      color: var(--text-background);
    }
    #sponsors h1::selection {
      background: transparent;
    }
    .header > p {
      color: var(--text-primary);
      font-size: 1.5em;
      margin-left: 1dvw;
    }
    #sponsors p::selection {
      background: transparent;
    }
    #sponsors .companies {
      display: flex;
      gap: 2rem;
      margin: 5dvh 0;
      flex-direction: column;
    }
    #sponsors .company {
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      height: auto;
    }
    .company-logo {
      display: flex;
      flex-direction: row;
      align-items: center;
      gap: 3rem;
      margin-left: 1rem;
    }
    .company .tier {
      font-size: 1rem;
      color: var(--text-primary);
      margin-left: 1rem;
      padding: 0;
    }
    #sponsors .company img {
      object-fit: contain;
    }
    /* mobile view */
    @media (max-width: 768px) {
      #sponsors {
        padding: 5dvh 5dvw;
      }
      #sponsors h1 {
        font-size: 6rem;
      }
      #sponsors .companies {
        margin: 5dvh 0 2dvh;
        gap: 2rem;
      }
      .company-logo {
        flex-wrap: wrap;
        gap: 1.5rem;
      }
      .event-partner {
        height: auto;
        width: 40vw;
      }
      .premium-sponsor {
        height: auto;
        width: 35vw;
      }
      .partner-sponsor {
        height: auto;
        width: 30vw;
      }
    }
  </style>
</section>
