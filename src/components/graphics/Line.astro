---
interface Props {
  top?: number;
  left?: number;
  right?: number;
  height: number;
  rotation: number;
  design: "primary" | "secondary";
}

const { top, left,right, rotation, design, height } = Astro.props;
---

<span
  class="line"
  style={{
    top: top + "rem",
    left: left + "rem",
    right: right + "rem",
    height: height + "dvh",
    transform: `rotate(${rotation}deg)`,
    opacity: design === "primary" ? "1" : "0.3",
  }}></span>

<style>
  .line {
    position: absolute;
    width: 0.2dvh;
    height: 1px;
    background: #a1a1a1;
    transform-origin: top;
  }
  @media screen and (max-width: 768px) {
    .line {
      display: none;
    }
  }
</style>
