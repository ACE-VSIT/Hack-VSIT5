---
import Graphics from "../components/graphics/Graphics.astro";
import "@fontsource/russo-one";
import "@fontsource-variable/overpass-mono";
import "@fontsource-variable/nunito-sans";
import { Image, getImage } from "astro:assets";
import hackVsit from "../assets/hackVsit.svg";
import AceLogo from "../assets/Ace-logo-large.svg";
import Discord from "../assets/discord.svg";
import Lines from "../assets/lines.svg";
const BackgroundLines = await getImage({ src: Lines, format: "svg" });
---

<section id="hero" style={`background-image: url(${BackgroundLines.src})`}>
  <div id="logo__graphic">
    <Image src={hackVsit} alt="hack" />
    <!-- <img src="/hackVsit.svg" alt="hack" /> -->
  </div>
  <Graphics top={15} left={16} alt="cubes1" src="cube" />
  <Graphics top={85} left={50} alt="cubes1" src="cubes" />
  <Graphics top={75} left={86} alt="cubes1" src="cube" />
</section>
<div id="hero__info">
  <div id="hero__info__text">
    <h1>HackVSIT <span>5.0</span></h1>
  </div>
  <div id="hero__info__cta">
    <a href="/#" class="btn">
      <svg
        class="logo"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 115.46 123.46"
        fill="#fff"
      >
        <path
          d="M115.46 68a55.43 55.43 0 0 1-50.85 55.11S28.12 124 16 123a12.6 
                  12.6 0 0 1-10.09-7.5 15.85 15.85 0 0 0 5.36 1.5c4 .34 10.72.51 20.13.51 
                  13.82 0 28.84-.38 29-.38h.26a60.14 60.14 0 0 0 54.72-52.47c.05 1.05.08 
                  2.18.08 3.34z"
        ></path>
        <path
          d="M110.93 55.87A55.43 55.43 0 0 1 60.08 111s-36.48.92-48.58-.12C5 110.29.15 
                  104.22 0 97.52l.2-83.84C.38 7 5.26.94 11.76.41c12.11-1 48.59.12 48.59.12a55.41 
                  55.41 0 0 1 50.58 55.34z"
        ></path>
      </svg>Apply with Devfolio</a
    >
    <a href="https://discord.gg/zZNrgktFzP" target="_blank">
      <button><Image src={Discord} alt="discord" /></button>
    </a>
  </div>
</div>

<table id="hero__info__table" cellspacing="0">
  <tbody>
    <tr>
      <td>
        <small>Date</small>
        <p>16-17</p>
      </td>
      <td>
        <small>Month</small><br />
        <p>FEB</p>
      </td>
      <td>
        <small>Year</small><br />
        <p>2024</p>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <p style="font-size: 2rem;">5th Edition</p>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <Image src={AceLogo} alt="ace-logo-large" />
      </td>
    </tr>
  </tbody>
</table>

<style>
  #hero {
    background-size: cover;
    background-position: center;
    width: 100dvw;
  }
  #hero *::selection {
    background: transparent;
  }
  #logo__graphic {
    position: relative;
    width: 100%;
    height: 100dvh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #logo__graphic img {
    position: absolute;
    transition: transform 0.25s;
  }
  #logo__graphic img::selection {
    background: transparent;
  }
  #logo__graphic img:nth-child(1) {
    top: 5dvh;
    left: 38dvw;
    z-index: 2;
    height: 62dvh;
    width: 50dvw;
  }
  #hero__info {
    position: absolute;
    top: 40dvh;
    left: 10dvw;
    min-width: 20dvw;
    width: auto;
    display: flex;
    justify-content: center;
    align-items: start;
    flex-direction: column;
    height: 20dvh;
    font-family: "Russo One", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
    font-size: 2.5dvh;
    font-weight: bold;
  }
  #hero__info__text h1 {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 1rem;
  }
  #hero__info__text span {
    position: relative;
    color: var(--primary-dark);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  #hero__info__cta {
    display: flex;
    min-width: 20dvw;
    width: auto;
    gap: 2rem;
    flex-direction: row;
    height: auto;
    /* margin-left: 2rem; */
    justify-content: start;
    font-weight: bold;
  }
  #hero__info__cta .btn {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
    font-family: "Nunito Sans Variable", sans-serif;
    background-color: #3770ff;
    border-radius: 4px;
    color: #fff;
    font-size: 22px;
    font-weight: 600;
    outline: none;
    padding: 0 32px;
    transition: all 0.1s ease-in 0s;
    white-space: nowrap;
    width: auto;
  }
  #hero__info__cta .btn svg {
    height: 2dvh;
    width: 2dvh;
    margin-right: 1rem;
  }
  #hero__info__cta .btn::after {
    content: "";
    border-radius: 4px;
    position: absolute;
    height: 100%;
    top: -6px;
    left: -6px;
    padding: 6px;
    width: 100%;
    border: white solid 1px;
  }
  /* #hero__info__cta .btn::before {
    position: absolute;
    content: "";
    transition: all 0.5s;
    bottom: -15px;
    height: 15px;
    width: 100%;
    left: 8px;
    transform: skewX(45deg);
    background-color: #319fe8;
  }
  #hero__info__cta .btn::after {
    position: absolute;
    content: "";
    transition: all 0.5s;
    right: -15px;
    height: 100%;
    width: 15px;
    bottom: -8px;
    transform: skewY(45deg);
    background-color: #007acc;
  }
  #hero__info__cta .btn:hover {
    margin-left: 10px;
  }
  #hero__info__cta .btn:hover::before {
    bottom: -5px;
    height: 5px;
    left: 3px;
  }
  #hero__info__cta .btn:hover::after {
    right: -5px;
    width: 5px;
    bottom: -3px;
  } */
  #hero__info__table {
    position: absolute;
    top: 55dvh;
    right: 5dvw;
    width: 25dvw;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-family: "Overpass Mono Variable", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
  }
  #hero__info__table td {
    padding: 1rem 1.5rem;
    border: 1px solid var(--text-primary);
  }
  #hero__info__table td p {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 0;
    font-weight: bold;
    font-size: 1.5rem;
  }
  small {
    font-size: 0.6rem;
    margin: 0;
  }
  [alt="ace-logo-large"] {
    margin: 0 0.5rem;
  }
  button {
    display: block;
    padding: 0.3rem 2rem;
    position: relative;
    font-family: "Overpass Mono Variable", sans-serif;
    font-size: 1rem;
    z-index: 2;
  }
  button::after {
    content: "";
    position: absolute;
    height: 100%;
    top: -7px;
    left: -7px;
    padding: 7px;
    width: 100%;
    border: white solid 1px;
  }
  button img {
    height: 4dvh;
    width: 4dvh;
  }
  #hero__info__table td h1 {
    color: var(--text-primary);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  /* mobile view */
  @media only screen and (max-width: 600px) {
    #hero {
      background: url("/linesMobile.svg") !important;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      width: 100dvw;
      height: 90dvh;
      overflow-y: hidden;
    }
    #hero__info__text {
      display: none;
    }
    #hero__info {
      top: 60dvh;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      left: 0;
    }
    #logo__graphic {
      overflow-y: hidden;
    }
    #logo__graphic img:first-child {
      z-index: 2;
      height: 80dvh;
      left: 0;
      top: 0dvh;
      left: -20dvw;
      width: 120dvw;
      object-fit: contain;
      overflow: hidden;
    }

    #hero__info__cta {
      display: flex;
      width: 100%;
      height: auto;
      margin-left: 0;
      justify-content: center;
      gap: 2rem;
      font-weight: bold;
    }
    #hero__info__table {
      top: 55dvh;
      left: 0dvw;
      width: auto;
      display: none;
    }
    #hero__info__table td {
      padding: 0 1.5rem;
      border: 1px solid var(--text-primary);
    }
    #hero__info__table td p {
      margin: 0;
      margin-block-start: 0;
      margin-block-end: 0;
      font-weight: bold;
      font-size: 1rem;
    }
    small {
      font-size: 0.6rem;
      margin: 0;
    }
    #hero__info__cta .btn {
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 16px;
      padding: 0 20px;
    }
    [alt="ace-logo-large"] {
      margin: 0 0.5rem;
    }
  }
</style>

<script is:inline>
  const logo = document.querySelector("#logo__graphic img:nth-child(1)");
  window.addEventListener("scroll", () => {
    const scroll = window.scrollY;
    const logoScroll = scroll / 2;
    // till scroll is 400 px
    if (scroll < 600) {
      logo.style.transform = `translateY(${
        logoScroll / 2
      }px) translateX(${-logoScroll}px)`;
    }
  });
</script>