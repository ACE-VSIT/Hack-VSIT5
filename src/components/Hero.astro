---
import Graphics from "../components/graphics/Graphics.astro";
import "@fontsource/russo-one";
import "@fontsource-variable/overpass-mono";
import Line from "./graphics/Line.astro";
---

<section id="hero">
  <div id="logo__graphic">
    <img src="/hackVsit.svg" alt="hack" />
  </div>
  <Graphics top={15} left={16} alt="cubes1" src="cube" />
  <Graphics top={85} left={50} alt="cubes1" src="cubes" />
  <Graphics top={75} left={86} alt="cubes1" src="cube" />
  <div id="hero__info">
    <div id="hero__info__text">
      <Line top={9} left={0} height={10} rotation={-90} design="primary" />
      <h1>HackVSIT <span>5.0</span></h1>
    </div>
    <div id="hero__info__cta">
      <a href="/#" class="btn">Register Now</a>
      <button><img src="/discord.svg" alt="discord" /></button>
    </div>
  </div>

  <table id="hero__info__table" cellspacing="0">
    <tbody>
      <tr>
        <td>
          <small>Date</small>
          <p>16-17</p>
        </td>
        <td>
          <small>Month</small><br />
          <p>FEB</p>
        </td>
        <td>
          <small>Year</small><br />
          <p>2024</p>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <p style="font-size: 2rem;">5th Edition</p>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <img src="/Ace-logo-large.svg" alt="ace-logo-large" />
        </td>
      </tr>
    </tbody>
  </table>
</section>

<style>
  #hero {
    background: url("/lines.svg");
    background-size: cover;
    background-position: center;
    width: 100vw;
  }
  #hero *::selection {
    background: transparent;
  }
  #logo__graphic {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #logo__graphic img {
    position: absolute;
    transition: transform 0.25s;
  }
  #logo__graphic img::selection {
    background: transparent;
  }
  #logo__graphic img:nth-child(1) {
    top: 5vh;
    left: 38vw;
    z-index: 2;
    height: 62vh;
    width: 50vw;
  }
  #hero__info {
    position: absolute;
    top: 40vh;
    left: 10vw;
    min-width: 20vw;
    width: auto;
    display: flex;
    justify-content: center;
    align-items: start;
    flex-direction: column;
    height: 20vh;
    font-family: "Russo One", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
    font-size: 2.5vh;
    font-weight: bold;
  }
  #hero__info__text h1 {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 1rem;
  }
  #hero__info__text span {
    position: relative;
    color: var(--primary-dark);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  #hero__info__cta {
    display: flex;
    width: 20vw;
    height: auto;
    /* margin-left: 2rem; */
    justify-content: start;
    font-weight: bold;
  }
  #hero__info__cta .btn {
    position: relative;
    padding: 1.5vh 3vh;
    min-width: 5vw;
    width: auto;
    color: var(--text-background);
    text-decoration: none;
    font-size: 1.5vh;
    font-weight: bold;
    font-family: "Overpass Mono Variable", sans-serif;
    transition: all 0.5s;
    background-color: var(--accent-primary);
  }
  #hero__info__cta .btn::after {
    content: "";
    position: absolute;
    height: 100%;
    top: -6px;
    left: -6px;
    padding: 6px;
    width: 100%;
    border: white solid 1px;
  }
