---
import Graphics from "../components/graphics/Graphics.astro";
import "@fontsource/russo-one";
import "@fontsource-variable/overpass-mono";
---

<section id="hero">
  <div id="logo__graphic">
    <img src="/hackVsit.svg" alt="hack" />
  </div>
  <Graphics top={15} left={16} alt="cubes1" src="cube" />
  <Graphics top={85} left={50} alt="cubes1" src="cubes" />
  <Graphics top={75} left={86} alt="cubes1" src="cube" />
  <div id="hero__info">
    <div id="hero__info__text">
      <h1>HackVSIT <span>5.0</span></h1>
    </div>
    <div id="hero__info__cta">
      <a href="/#" class="btn">Register Now</a>
    </div>
  </div>

  <table id="hero__info__table" cellspacing="0">
    <tbody>
      <tr>
        <td>
          <small>Date</small>
          <p>16-17</p>
        </td>
        <td>
          <small>Month</small><br />
          <p>FEB</p>
        </td>
        <td>
          <small>Year</small><br />
          <p>2024</p>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <p style="font-size: 2rem;">VIPS,PITAMPURA</p>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <img src="/Ace-logo-large.svg" alt="ace-logo-large" />
        </td>
      </tr>
    </tbody>
  </table>
</section>

<style>
  #hero {
    background: url("/lines.svg");
    background-size: cover;
    background-position: center;
    width: 100vw;
  }
  #hero *::selection {
    background: transparent;
  }
  #logo__graphic {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #logo__graphic img {
    position: absolute;
  }
  #logo__graphic img::selection {
    background: transparent;
  }
  #logo__graphic img:nth-child(1) {
    top: 5vh;
    left: 38vw;
    z-index: 2;
    height: 62vh;
    width: 50vw;
  }
  #hero__info {
    position: absolute;
    top: 40vh;
    left: 10vw;
    min-width: 20vw;
    width: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    height: 20vh;
    font-family: "Russo One", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
    font-size: 2.5vh;
    font-weight: bold;
  }
  #hero__info__text span {
    position: relative;
    color: var(--primary-dark);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  #hero__info__cta {
    display: flex;
    margin-top: 1rem;
    width: auto;
    justify-content: center;
    align-items: center;
    font-weight: bold;
    background: rgb(112, 111, 111);
  }
  #hero__info__cta .btn {
    position: absolute;
    padding: 1.5vh 7vh;
    min-width: 10vw;
    width: auto;
    color: var(--text-background);
    text-decoration: none;
    font-size: 1.5vh;
    font-weight: bold;
    font-family: "Overpass Mono Variable", sans-serif;
    transition: all 0.5s;
    background-color: var(--accent-primary);
  }
  #hero__info__cta .btn::before {
    position: absolute;
    content: "";
    transition: all 0.5s;
    bottom: -15px;
    height: 15px;
    width: 100%;
    left: 8px;
    transform: skewX(45deg);
    background-color: #319fe8;
  }
  #hero__info__cta .btn::after {
    position: absolute;
    content: "";
    transition: all 0.5s;
    right: -15px;
    height: 100%;
    width: 15px;
    bottom: -8px;
    transform: skewY(45deg);
    background-color: #007acc;
  }
  #hero__info__cta .btn:hover {
    margin-left: 10px;
    margin-top: 10px;
  }
  #hero__info__cta .btn:hover::before {
    bottom: -5px;
    height: 5px;
    left: 3px;
  }
  #hero__info__cta .btn:hover::after {
    right: -5px;
    width: 5px;
    bottom: -3px;
  }
  #hero__info__table {
    position: absolute;
    top: 55vh;
    right: 5vw;
    width: 25vw;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-family: "Overpass Mono Variable", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
  }
  #hero__info__table td {
    padding: 1rem 1.5rem;
    border: 1px solid var(--text-primary);
  }
  #hero__info__table td p {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 0;
    font-weight: bold;
    font-size: 1.5rem;
  }
  small {
    font-size: 0.6rem;
    margin: 0;
  }
  [alt="ace-logo-large"] {
    margin: 0 0.5rem;
  }
  #hero__info__table td h1 {
    color: var(--text-primary);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  /* mobile view */
  @media only screen and (max-width: 600px) {
    #hero {
      background: url("/linesMobile.svg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      width: 100vw;
      height: 100vh;
      overflow-y: hidden;
    }
    #hero__info {
      top: 60vh;
      width: 100%;
      left: 0;
    }
    #logo__graphic {
      overflow-y: hidden;
    }
    #logo__graphic img:first-child {
      top: 10vh;
      left: 10vw;
      z-index: 2;
      width: 90vw;
    }
    #hero__info__cta {
    }
    #hero__info__cta .btn {
    }
    #hero__info__cta .btn:hover::after {
    }
    #hero__info__table {
      top: 55vh;
      left: 0vw;
      width: auto;
      display: none;
    }
    #hero__info__table td {
      padding: 0 1.5rem;
      border: 1px solid var(--text-primary);
    }
    #hero__info__table td p {
      margin: 0;
      margin-block-start: 0;
      margin-block-end: 0;
      font-weight: bold;
      font-size: 1rem;
    }
    small {
      font-size: 0.6rem;
      margin: 0;
    }
    [alt="ace-logo-large"] {
      margin: 0 0.5rem;
    }
  }
</style>
