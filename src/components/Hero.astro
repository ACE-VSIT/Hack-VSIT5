---
import Graphics from "../components/graphics/Graphics.astro";
import "@fontsource/russo-one";
import "@fontsource-variable/overpass-mono";
import Line from "./graphics/Line.astro";
---

<section id="hero">
  <div id="logo__graphic">
    <img src="/hackVsit.svg" alt="hack" />
  </div>
  <Graphics top={15} left={16} alt="cubes1" src="cube" />
  <Graphics top={85} left={50} alt="cubes1" src="cubes" />
  <Graphics top={75} left={86} alt="cubes1" src="cube" />
</section>
<div id="hero__info">
  <div id="hero__info__text">
    <Line top={8} left={0} height={10} rotation={-90} design="primary" />
    <h1>HackVSIT <span>5.0</span></h1>
  </div>
  <div id="hero__info__cta">
    <a href="/#" class="btn"> Register Now</a>
    <button><img src="/discord.svg" alt="discord" /></button>
  </div>
  <div
    class="apply-button"
    data-hackathon-slug="YOUR-HACKATHON-SLUG"
    data-button-theme="light"
  >
  </div>
</div>

<table id="hero__info__table" cellspacing="0">
  <tbody>
    <tr>
      <td>
        <small>Date</small>
        <p>16-17</p>
      </td>
      <td>
        <small>Month</small><br />
        <p>FEB</p>
      </td>
      <td>
        <small>Year</small><br />
        <p>2024</p>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <p style="font-size: 2rem;">5th Edition</p>
      </td>
    </tr>
    <tr>
      <td colspan="3">
        <img src="/Ace-logo-large.svg" alt="ace-logo-large" />
      </td>
    </tr>
  </tbody>
</table>

<style>
  #hero {
    background: url("/lines.svg");
    background-size: cover;
    background-position: center;
    width: 100dvw;
  }
  #hero *::selection {
    background: transparent;
  }
  #logo__graphic {
    position: relative;
    width: 100%;
    height: 100dvh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #logo__graphic img {
    position: absolute;
    transition: transform 0.25s;
  }
  #logo__graphic img::selection {
    background: transparent;
  }
  #logo__graphic img:nth-child(1) {
    top: 5dvh;
    left: 38dvw;
    z-index: 2;
    height: 62dvh;
    width: 50dvw;
  }
  #hero__info {
    position: absolute;
    top: 40dvh;
    left: 10dvw;
    min-width: 20dvw;
    width: auto;
    display: flex;
    justify-content: center;
    align-items: start;
    flex-direction: column;
    height: 20dvh;
    font-family: "Russo One", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
    font-size: 2.5dvh;
    font-weight: bold;
  }
  #hero__info__text h1 {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 1rem;
  }
  #hero__info__text span {
    position: relative;
    color: var(--primary-dark);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  #hero__info__cta {
    display: flex;
    width: 20dvw;
    height: auto;
    /* margin-left: 2rem; */
    justify-content: start;
    font-weight: bold;
  }
  #hero__info__cta .btn {
    position: relative;
    padding: 1.5dvh 3dvh;
    min-width: 5dvw;
    width: auto;
    color: var(--text-background);
    text-decoration: none;
    font-size: 1.5dvh;
    font-weight: bold;
    font-family: "Overpass Mono Variable", sans-serif;
    transition: all 0.5s;
    background-color: var(--accent-primary);
  }
  #hero__info__cta .btn::after {
    content: "";
    position: absolute;
    height: 100%;
    top: -6px;
    left: -6px;
    padding: 6px;
    width: 100%;
    border: white solid 1px;
  }
  /* #hero__info__cta .btn::before {
    position: absolute;
    content: "";
    transition: all 0.5s;
    bottom: -15px;
    height: 15px;
    width: 100%;
    left: 8px;
    transform: skewX(45deg);
    background-color: #319fe8;
  }
  #hero__info__cta .btn::after {
    position: absolute;
    content: "";
    transition: all 0.5s;
    right: -15px;
    height: 100%;
    width: 15px;
    bottom: -8px;
    transform: skewY(45deg);
    background-color: #007acc;
  }
  #hero__info__cta .btn:hover {
    margin-left: 10px;
  }
  #hero__info__cta .btn:hover::before {
    bottom: -5px;
    height: 5px;
    left: 3px;
  }
  #hero__info__cta .btn:hover::after {
    right: -5px;
    width: 5px;
    bottom: -3px;
  } */
  #hero__info__table {
    position: absolute;
    top: 55dvh;
    right: 5dvw;
    width: 25dvw;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    font-family: "Overpass Mono Variable", sans-serif;
    color: var(--text-primary);
    letter-spacing: 0.2rem;
  }
  #hero__info__table td {
    padding: 1rem 1.5rem;
    border: 1px solid var(--text-primary);
  }
  #hero__info__table td p {
    margin: 0;
    margin-block-start: 0;
    margin-block-end: 0;
    font-weight: bold;
    font-size: 1.5rem;
  }
  small {
    font-size: 0.6rem;
    margin: 0;
  }
  [alt="ace-logo-large"] {
    margin: 0 0.5rem;
  }
  button {
    display: none;
  }
  #hero__info__table td h1 {
    color: var(--text-primary);
    -webkit-text-stroke-width: 2px;
    -webkit-text-stroke-color: var(--text-primary);
  }
  /* mobile view */
  @media only screen and (max-width: 600px) {
    #hero {
      background: url("/linesMobile.svg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      width: 100dvw;
      height: 90dvh;
      overflow-y: hidden;
    }
    #hero__info__text {
      display: none;
    }
    #hero__info {
      top: 60dvh;
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      left: 0;
    }
    #logo__graphic {
      overflow-y: hidden;
    }
    #logo__graphic img:first-child {
      z-index: 2;
      height: 80dvh;
      left: 0;
      top: 0dvh;
      left: -20dvw;
      width: 120dvw;
      object-fit: contain;
      overflow: hidden;
    }

    #hero__info__cta {
      display: flex;
      width: 100%;
      height: auto;
      margin-left: 0;
      justify-content: center;
      gap: 2rem;
      font-weight: bold;
    }
    #hero__info__table {
      top: 55dvh;
      left: 0dvw;
      width: auto;
      display: none;
    }
    #hero__info__table td {
      padding: 0 1.5rem;
      border: 1px solid var(--text-primary);
    }
    #hero__info__table td p {
      margin: 0;
      margin-block-start: 0;
      margin-block-end: 0;
      font-weight: bold;
      font-size: 1rem;
    }
    small {
      font-size: 0.6rem;
      margin: 0;
    }
    .btn {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    [alt="ace-logo-large"] {
      margin: 0 0.5rem;
    }
    button {
      display: block;
      padding: 0.3rem 2rem;
      position: relative;
      font-family: "Overpass Mono Variable", sans-serif;
      font-size: 1rem;
    }
    button::after {
      content: "";
      position: absolute;
      height: 100%;
      top: -7px;
      left: -7px;
      padding: 7px;
      width: 100%;
      border: white solid 1px;
    }
    button img {
      height: 4dvh;
      width: 4dvh;
    }
  }
</style>

<script>
  const logo = document.querySelector(
    "#logo__graphic img:nth-child(1)"
  ) as HTMLElement;
  window.addEventListener("scroll", () => {
    const scroll = window.scrollY;
    const logoScroll = scroll / 2;
    // till scroll is 400 px
    if (scroll < 600) {
      logo.style.transform = `translateY(${
        logoScroll / 2
      }px) translateX(${-logoScroll}px)`;
    }
  });
</script>

<script src="https://apply.devfolio.co/v2/sdk.js"></script>
