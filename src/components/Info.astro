---
import "@fontsource-variable/overpass-mono";
import Graphics from "./graphics/Graphics.astro";
const data = [
  `ACE - The Association of Computer Enthusiasts, presents the 5th edition of HackVSIT. We at ACE believe in encouraging the growing talent and by HackVSIT we bring together, people with different outlook and solutions for already existing problems using technology and design. For 24 hours, you will work together with your teams to envision and develop the technology of tomorrow for solving the problems of today.`,
  `Lorem ipsum dolor sit amet consectetur adipisicing elit. Consequatur alias
      laudantium nam iure repudiandae error accusamus porro nisi laboriosam
      distinctio voluptas et ipsam illo illum, expedita eum fugiat explicabo
      maxime?`,
];
---

<section id="info">
  <h1>24.</h1>
  <p>HOURS</p>
  <div id="info__para">
    <div>{data[0]}</div>
    <div>{data[1]}</div>
  </div>
  <Graphics src="cube" top={35} right={0} alt="cube" />
</section>

<style>
  #info {
    position: relative;
    margin-top: 3rem;
    min-height: 60vh;
    height: auto;
    padding: 0 10vw;
    font-family: "Overpass Mono Variable", sans-serif;
  }
  #info h1 {
    font-size: 10em;
    height: 0.8em;
    font-weight: bold;
    padding: 0;
    margin: 0;
    color: var(--text-background);
  }
  #info h1::selection {
    background: transparent;
  }
  #info p {
    color: var(--text-primary);
    font-size: 1.5em;
    margin-left: 1rem;
  }
  #info p::selection {
    background: transparent;
  }
  #info__para {
    color: var(--text-primary);
    font-size: 1.5em;
    margin-top: 1rem;
    margin-left: 1rem;
    gap: 1rem;
    display: flex;
  }
  #info__para *::selection {
    background: var(--text-primary);
  }
  /* media */
  @media screen and (max-width: 600px) {
    #info {
      padding: 0 5vw;
    }
    #info__para{
      flex-direction: column;
    }
  }
</style>
